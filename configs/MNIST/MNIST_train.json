{
    "name": "2_Spurious_MNIST-VGG_16",
    "n_gpu": 1,
    "method": "train",
    "arch": {
        "type": "CIFAR10PretrainedModel",
        "args": {
            "type": "vgg16_bn",
            "checkpoint_path": ""
        }
    },
    "dataset": {
        "type": "ColoredMNIST",
        "args": {
            "root": "data",
            "dataset_type": "2_Spurious_MNIST",
            "split": "training"
        },
        "train_split": 0.8

    },
    "data_loader": {
        "args":{
            "batch_size": 256,
            "num_workers": 8
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-6,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 1
        }
    },
    "trainer": {
        "epochs": 1,

        "save_dir": "saved/train/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
