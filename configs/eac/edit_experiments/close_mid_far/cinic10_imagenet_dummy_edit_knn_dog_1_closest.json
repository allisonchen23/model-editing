{
    "name": "CINIC10_ImageNet-VGG_16",
    "n_gpu": 1,
    "method": "edit",
    "layernum": 12,
    "arch": {
        "type": "CIFAR10PretrainedModelEdit",
        "args": {
            "type": "vgg16_bn",
            "checkpoint_path": "external_code/PyTorch_CIFAR10/cifar10_models/state_dicts/vgg16_bn.pt",
            "num_classes": 10,
            "init_weights": false,
            "avg_pool_output": [1, 1],
            "mean": [0.4914, 0.4822, 0.4465],
            "std": [0.2471, 0.2435, 0.2616]
        }

    },
    "data_loader": {
        "type": "CINIC10DataLoader",
        "args":{
            "data_dir": "data/cinic-10-imagenet-dummy",
            "batch_size": 256,
            "shuffle": false,
            "normalize": false,
            "num_workers": 8
        }
    },
    "editor": {
        "key_image_path": "paths/edits/dog/key_1.txt",
        "value_image_path": "paths/edits/dog/value_1_closest.txt",
        "mask_path": null,
        "image_size": [32, 32],
        "args": {
            "ntrain": 1,
            "mode_rewrite": "editing",
            "nsteps": 40000,
            "lr": 1e-4,
            "restrict_rank": true,
            "nsteps_proj": 10,
            "rank": 1,
            "use_mask": false
        },
        "K": 100

    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-6,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy",
        "per_class_accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 1
        }
    },
    "trainer": {
        "epochs": 10,
        "save_dir": "saved/edit/knn/dog/1_closest",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
