{
    "name": "CINIC10_ImageNet-VGG_16",
    "n_gpu": 1,
    "method": "train",
    "arch": {
        "type": "CIFAR10PretrainedModel",
        "checkpoint_path": "external_code/PyTorch_CIFAR10/cifar10_models/state_dicts/vgg16_bn.pt",
        "args": {
            "type": "vgg16_bn"
        }
    },
    "data_loader": {
        "type": "CINIC10DataLoader",
        "args": {
            "data_dir": "data/cinic-10-imagenet",
            "batch_size": 256,
            "shuffle": true,
            "normalize": true,
            "means": [0.4914, 0.4822, 0.4465],
            "stds": [0.2471, 0.2435, 0.2616],
            "augmentations": ["horizontal_flip"],
            "num_workers": 8
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 1e-3,
            "weight_decay": 0.01
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 1
        }
    },
    "trainer": {
        "epochs": 150,

        "save_dir": "saved/debug",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "valid_epoch": 2,

        "tensorboard": true
    }
}
